<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="50dp"
        android:background="@drawable/img"> <!-- Change this to your image name -->

        <TextView
            android:id="@+id/tv_display_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textSize="18sp"
            android:textColor="@android:color/white"/> <!-- Set text color to white -->

        <TextView
            android:id="@+id/tv_display_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age: "
            android:textSize="18sp"
            android:textColor="@android:color/white"/> <!-- Set text color to white -->

        <TextView
            android:id="@+id/tv_display_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grade: "
            android:textSize="18sp"
            android:textColor="@android:color/white"/> <!-- Set text color to white -->

        <TextView
            android:id="@+id/tv_display_major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Major: "
            android:textSize="18sp"
            android:textColor="@android:color/white"/> <!-- Set text color to white -->

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"/> <!-- Semi-transparent black overlay -->

</FrameLayout>
